<%
  basic_result = dbs_visibility.basic
  enhanced_result = dbs_visibility.enhanced

  content_for(
    :dbs_maybe_explanation, t('dbs_maybe_explanation_html', scope: :results), flush: true
  ) if enhanced_result.eql?(:maybe)
%>

<div class="govuk-inset-text govuk-!-padding-top-1 govuk-!-padding-bottom-1">
  <%= t([basic_result, 'html'].join('_'), scope: [dbs_visibility.to_partial_path, :basic_dbs], kind: dbs_visibility.kind) %>
  <br/>
  <%= t([enhanced_result, 'html'].join('_'), scope: [dbs_visibility.to_partial_path, :enhanced_dbs], kind: dbs_visibility.kind) %>
</div>
