<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>
    <%= step_form @form_object do |f| %>
      <%= f.govuk_fieldset legend: { text: t('.heading') },
                           caption: { text: f.i18n_caption } do %>
        <p class="govuk-body">
          <%= link_to t(".external_link"),
              "https://www.legislation.gov.uk/ukpga/2020/17/schedule/18/enacted",
              class: "govuk-link",
              rel: "noreferrer noopener",
              target: "_blank"
          %>
        </p>
        <%= f.govuk_collection_radio_buttons :conviction_schedule18,
              GenericYesNo.values, :value, nil, inline: true, legend: nil %>
        <%= f.continue_button %>
      <% end %>
    <% end %>
  </div>
</div>
